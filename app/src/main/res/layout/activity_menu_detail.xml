<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.jessie.teamproject.MenuDetail">

    <ImageView
        android:id="@+id/detailImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/detailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="메뉴 이름"
        android:textColor="@color/colorFirst"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/detailPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="메뉴 가격"
        android:textColor="@color/colorSecond"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/detailInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="메뉴 상세 정보"
        android:textColor="@color/colorThird"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detailStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메뉴 평점"
        android:textColor="@color/colorFourth"
        android:textSize="20sp" />

</LinearLayout>
